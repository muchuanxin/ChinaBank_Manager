<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BaseScoreAccount.ScoreExchangeActivity">


    <RelativeLayout
        android:id="@+id/status_background"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@drawable/navigation_bg"/>

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/status_background"
        android:background="@drawable/navigation_bg">

        <RelativeLayout
            android:layout_width="45dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/back_btn_bg" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:text="积分信息"
            android:textColor="#fff"
            android:textSize="22dp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/my_score"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/header"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="60dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/all_score"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:text="全部积分:"
            android:textColor="#565656"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/all_score_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="9dp"

            android:textSize="16dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/separator1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/my_score"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/light_gray_line" />

    <LinearLayout
        android:id="@+id/my_unexchanged_score"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/separator1"
        android:layout_marginLeft="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:text="未兑换积分："
            android:textColor="#565656"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/unexchanged_score_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="9dp"
            android:textSize="16dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/separator2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/my_unexchanged_score"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/light_gray_line" />

    <LinearLayout
        android:id="@+id/my_exchanged_score"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/separator2"
        android:layout_marginLeft="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:text="已兑换积分："
            android:textColor="#565656"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/exchanged_score_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="9dp"
            android:textSize="16dp" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/my_exchanged_score"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/light_gray_line" />

    <Button
        android:id="@+id/exchange"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/login_btn_bg"
        android:gravity="center"
        android:text="兑换积分"
        android:textColor="#fff"
        android:textSize="16dp" />

</RelativeLayout>