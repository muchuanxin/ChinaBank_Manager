<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/car_perf_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="汽车分期"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/detail_worker_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="25dp"
                android:layout_marginTop="2dp"
                android:textColor="@color/black_text_most"
                android:textSize="15dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/car_perf_recommend_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textSize="16dp"
            android:textColor="@color/black_text_most"
            android:text="业务推荐数量：0笔"/>

        <TextView
            android:id="@+id/car_perf_recommend_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="16dp"
            android:textColor="@color/black_text_most"
            android:text="业务推荐金额：0.0000万元"/>

        <TextView
            android:id="@+id/car_perf_success_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="16dp"
            android:textColor="@color/black_text_most"
            android:text="业务成功数量：0笔"/>

        <TextView
            android:id="@+id/car_perf_success_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="16dp"
            android:textColor="@color/black_text_most"
            android:text="业务成功金额：0.0000万元"/>

    </LinearLayout>

</LinearLayout>