<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.xd.aselab.chinabankmanager.kafenqi.KWorkerManage.activity.KWorkerJoinCheckActivity">

    <RelativeLayout
        android:id="@+id/act_kafenqi_worker_join_top_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#B81C1E">

        <RelativeLayout
            android:id="@+id/act_kafenqi_worker_join_back_btn"
            android:layout_width="50dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/back_btn_bg"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:textColor="#fff"
            android:textSize="22dp"
            android:text="卡分期—推广员加盟审核"/>

    </RelativeLayout>

    <ListView
        android:id="@+id/act_kafenqi_worker_join_list_view"
        android:layout_below="@id/act_kafenqi_worker_join_top_bar"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/act_kafenqi_worker_join_no_data_img"
        android:layout_below="@id/act_kafenqi_worker_join_top_bar"
        android:layout_marginTop="200dp"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_centerInParent="true"
        android:src="@drawable/no_data"/>

    <TextView
        android:id="@+id/act_kafenqi_worker_join_no_data_txt"
        android:layout_below="@id/act_kafenqi_worker_join_no_data_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="14dp"
        android:text="还没有加盟信息~"
        android:visibility="gone"/>

</RelativeLayout >
