<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context="com.xd.aselab.chinabankmanager.kafenqi.KWorkerManage.activity.KWorkerManageActivity">

    <RelativeLayout
        android:id="@+id/act_my_mana_top_bar"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:background="@color/colorPrimaryDark">

        <RelativeLayout
            android:id="@+id/act_kafenqi_worker_manag_back_btn"
            android:layout_width="50dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="31dp"
                android:padding="1.5dp"
                android:src="@drawable/back_btn_bg"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:layout_centerHorizontal="true"
            android:textColor="#fff"
            android:textSize="22dp"
            android:text="推广员管理"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/act_my_mana_division1"
        android:layout_below="@id/act_my_mana_top_bar"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#EFF3F9"/>

    <LinearLayout
        android:id="@+id/act_kafenqi_worker_manag_perf"
        android:layout_below="@id/act_my_mana_division1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/my_all_performence"/>

        <TextView
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_text_most"
            android:textSize="18dp"
            android:text="推广员业绩"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/act_my_mana_division2"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/gray_bg"/>

    <LinearLayout
        android:id="@+id/act_kafenqi_worker_manag_join_verify"
        android:layout_below="@id/act_my_mana_division2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/worker_join_check"/>

        <TextView
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_text_most"
            android:textSize="18dp"
            android:text="推广员加盟审核"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/act_my_mana_division3"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/gray_bg"/>

    <LinearLayout
        android:id="@+id/act_kafenqi_worker_cancel_check"
        android:layout_below="@id/act_my_mana_division3"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/worke_release_check"/>

        <TextView
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_text_most"
            android:textSize="18dp"
            android:text="推广员解约审核"/>

    </LinearLayout>

</LinearLayout>
