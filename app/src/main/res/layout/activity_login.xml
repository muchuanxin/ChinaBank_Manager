<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.xd.aselab.chinabankmanager.activity.Login">

    <ImageView
        android:layout_marginTop="105dp"
        android:layout_width="135dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/login_logo"/>

    <ImageView
        android:id="@+id/act_login_account_icon"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="270dp"
        android:layout_width="18dp"
        android:layout_height="23dp"
        android:paddingBottom="3dp"
        android:scaleType="fitXY"
        android:src="@drawable/account_bg"/>

    <EditText
        android:id="@+id/act_login_account_edit"
        android:layout_toRightOf="@id/act_login_account_icon"
        android:layout_alignBottom="@id/act_login_account_icon"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="70dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textSize="16dp"
        android:hint="账号"
        android:typeface="sans"
        android:background="@null"/>
    <View
        android:layout_below="@id/act_login_account_edit"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/gray_line"/>

    <ImageView
        android:id="@+id/act_login_account_delete"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/act_login_account_edit"
        android:layout_marginRight="70dp"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/delete"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/act_login_password_icon"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/act_login_account_icon"
        android:layout_width="19dp"
        android:layout_height="26dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:scaleType="fitXY"
        android:src="@drawable/password_bg"/>

    <EditText
        android:id="@+id/act_login_password_edit"
        android:layout_toRightOf="@id/act_login_password_icon"
        android:layout_alignBottom="@id/act_login_password_icon"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:textSize="16dp"
        android:hint="密码"
        android:background="@null"
        android:inputType="textPassword"/>

    <ImageView
        android:id="@+id/act_login_password_delete"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/act_login_password_edit"
        android:layout_marginRight="70dp"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/delete"
        android:visibility="gone"/>

    <View
        android:layout_below="@id/act_login_password_edit"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/gray_line"/>

    <Button
        android:id="@+id/login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_below="@id/act_login_password_icon"
        android:layout_width="165dp"
        android:layout_height="30dp"
        android:background="@drawable/login_btn_bg"
        android:textColor="#fff"
        android:textSize="18dp"
        android:text="登录"/>

    <TextView
        android:id="@+id/act_login_forget_psw"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:textColor="#666"
        android:text="忘记密码"/>

</RelativeLayout>
