<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.xd.aselab.chinabankmanager.activity.MainActivity_Base">

    <RelativeLayout
        android:id="@+id/act_main_base_top_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#B81C1E">

        <TextView
            android:id="@+id/act_main_base_toast_i"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="27dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/rounded_circle"
            android:gravity="center"
            android:textSize="15dp"
            android:textColor="#fff"
            android:textAllCaps="false"
            android:text="i"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:textColor="#fff"
            android:textSize="22dp"
            android:text="金融获客"/>

        <ImageView
            android:id="@+id/act_main_base_personal_info"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/personal_info"/>

    </RelativeLayout>

    <com.xd.aselab.chinabankmanager.fragment.ImageCycleView
        android:id="@+id/act_main_base_ImageCycleView"
        android:layout_below="@id/act_main_base_top_bar"
        android:layout_width="match_parent"
        android:layout_height="180dp"/>

    <LinearLayout
        android:id="@+id/act_main_base_my_management"
        android:layout_below="@id/act_main_base_ImageCycleView"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="70dp"
        android:layout_width="80dp"
        android:layout_height="110dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/my_management"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18dp"
            android:textColor="#000"
            android:text="我的管理"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/act_main_base_hot_recommend"
        android:layout_toRightOf="@id/act_main_base_my_management"
        android:layout_alignBottom="@id/act_main_base_my_management"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="70dp"
        android:layout_width="80dp"
        android:layout_height="110dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/hot_recommend"/>

        <TextView
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="#000"
            android:text="热点推荐"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/act_main_base_china_bank_network"
        android:layout_below="@id/act_main_base_my_management"
        android:layout_marginTop="30dp"
        android:layout_alignLeft="@id/act_main_base_my_management"
        android:layout_width="80dp"
        android:layout_height="110dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/my_network"/>

        <TextView
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="#000"
            android:text="中行网点"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/act_main_base_china_bank_benefit"
        android:layout_toRightOf="@id/act_main_base_china_bank_network"
        android:layout_alignBottom="@id/act_main_base_china_bank_network"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="70dp"
        android:layout_width="80dp"
        android:layout_height="110dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/china_bank_benefit"/>

        <TextView
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="#000"
            android:text="中行福利"/>

    </LinearLayout>

</RelativeLayout>
