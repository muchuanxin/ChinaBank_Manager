<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context="com.xd.aselab.chinabankmanager.activity.Manager.MyManagement">

    <RelativeLayout
        android:id="@+id/act_my_mana_top_bar"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:background="@color/colorPrimaryDark">

        <RelativeLayout
            android:id="@+id/act_my_mana_back_btn"
            android:layout_width="50dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="31dp"
                android:padding="1.5dp"
                android:src="@drawable/back_btn_bg"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:layout_centerHorizontal="true"
            android:textColor="#fff"
            android:textSize="22dp"
            android:text="信用卡发卡"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/act_my_mana_division1"
        android:layout_below="@id/act_my_mana_top_bar"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#EFF3F9"/>

   <LinearLayout
       android:id="@+id/act_my_mana_my_perf"
       android:layout_below="@id/act_my_mana_division1"
       android:padding="20dp"
       android:layout_width="match_parent"
       android:layout_height="80dp"
       android:orientation="horizontal">

       <ImageView
           android:layout_gravity="center_vertical"
           android:layout_marginLeft="20dp"
           android:layout_width="40dp"
           android:layout_height="40dp"
           android:src="@drawable/my_performance"/>

       <TextView
           android:layout_gravity="center_vertical"
           android:layout_marginLeft="30dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="#000"
           android:textSize="20dp"
           android:text="我的业绩"/>

   </LinearLayout>

   <RelativeLayout
       android:id="@+id/act_my_mana_division2"
       android:layout_below="@id/act_my_mana_my_perf"
       android:layout_width="match_parent"
       android:layout_height="20dp"
       android:background="#EFF3F9"/>

   <LinearLayout
       android:id="@+id/act_my_mana_base_performance"
       android:layout_below="@id/act_my_mana_division2"
       android:padding="20dp"
       android:layout_width="match_parent"
       android:layout_height="80dp"
       android:orientation="horizontal">

       <ImageView
           android:layout_gravity="center_vertical"
           android:layout_marginLeft="20dp"
           android:layout_width="40dp"
           android:layout_height="40dp"
           android:src="@drawable/base_ranking"/>

       <TextView
           android:layout_gravity="center_vertical"
           android:layout_marginLeft="30dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="#000"
           android:textSize="20dp"
           android:text="银行卡客户经理业绩"/>

   </LinearLayout>

   <RelativeLayout
       android:id="@+id/act_my_mana_division3"
       android:layout_below="@id/act_my_mana_base_performance"
       android:layout_width="match_parent"
       android:layout_height="20dp"
       android:background="#EFF3F9"/>

   <LinearLayout
       android:id="@+id/act_my_mana_lobby_performance"
       android:layout_below="@id/act_my_mana_division3"
       android:padding="20dp"
       android:layout_width="match_parent"
       android:layout_height="80dp"
       android:orientation="horizontal">

       <ImageView
           android:layout_gravity="center_vertical"
           android:layout_marginLeft="20dp"
           android:layout_width="40dp"
           android:layout_height="40dp"
           android:src="@drawable/base_info"/>

       <TextView
           android:layout_gravity="center_vertical"
           android:layout_marginLeft="30dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="#000"
           android:textSize="20dp"
           android:text="大堂助理业绩"/>

   </LinearLayout>

</LinearLayout>
