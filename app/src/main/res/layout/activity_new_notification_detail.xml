<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context="com.xd.aselab.chinabankmanager.kafenqi.KWorkerManage.activity.NewNotificationDetailActivity">

    <RelativeLayout
        android:id="@+id/act_my_perf_top_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#B81C1E"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">

        <RelativeLayout
            android:id="@+id/act_my_perf_back_btn"
            android:layout_width="50dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/back_btn_bg"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:textColor="#fff"
            android:textSize="22dp"
            android:text="新业务详情"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/detail_worker_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18dp"
                    android:text="name"/>
                <TextView
                    android:id="@+id/detail_applicate_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textSize="16dp"
                    android:text="2017.09.23"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/detail_worker_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:paddingTop="2dp"
                    android:text="联系电话："/>
                <ImageView
                    android:id="@+id/iv_call_worker_tel"
                    android:clickable="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:gravity="right"
                    android:src="@drawable/telephone_red"/>
                <ImageView
                    android:id="@+id/iv_worker_chat"
                    android:layout_toLeftOf="@id/iv_call_worker_tel"
                    android:layout_width="24dp"
                    android:layout_height="22dp"
                    android:gravity="right"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/chat_small"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/detail_worker_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="16dp"
                android:text="工作单位："/>
            <TextView
                android:id="@+id/detail_applicatin_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="16dp"
                android:text="申请人："/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/detail_application_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:paddingTop="2dp"
                    android:text="联系电话："/>
                <ImageView
                    android:id="@+id/iv_call_application_tel"
                    android:clickable="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:gravity="right"
                    android:src="@drawable/telephone_red"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/detail_applicate_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="16dp"
                android:text="申请金额："/>
            <TextView
                android:id="@+id/detail_applicate_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="16dp"
                android:text="分期数："/>
            <TextView
                android:id="@+id/detail_buy_commodity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="16dp"
                android:text="购买商品："/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/detail_self_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="16dp"
                    android:text="评分:"/>
                <TextView
                    android:visibility="gone"
                    android:id="@+id/detail_system_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="16dp"
                    android:text="预授信评分:"/>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/show_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:paddingTop="2dp"
                    android:text="查看详细信息"/>
                <ImageView
                    android:id="@+id/iv_right_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:padding="5dp"
                    android:gravity="right"
                    android:src="@drawable/arrow_right"/>
            </RelativeLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/detail_application_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp">
                <TextView
                    android:id="@+id/detail_applicate_house"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="16dp"
                    android:text="住房权利："/>
                <TextView
                    android:id="@+id/detail_applicate_diya"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="16dp"
                    android:text="有无抵押："/>
                <TextView
                    android:id="@+id/detail_applicate_yueshouru"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="16dp"
                    android:text="个人月收入："/>
                <TextView
                    android:id="@+id/detail_applicate_yuechangzhai"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="16dp"
                    android:text="月偿债："/>
                <TextView
                    android:id="@+id/detail_applicate_congye"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="16dp"
                    android:text="从业情况："/>
                <TextView
                    android:id="@+id/detail_applicate_muqianzhuzhishijian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="16dp"
                    android:text="在目前住址时间："/>
                <TextView
                    android:id="@+id/detail_applicate_hunyin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="16dp"
                    android:text="婚姻状况："/>
                <TextView
                    android:id="@+id/detail_applicate_hujiqingkuang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="16dp"
                    android:text="户籍情况："/>
                <TextView
                    android:id="@+id/detail_applicate_wenhua"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="16dp"
                    android:text="文化程度："/>
                <TextView
                    android:id="@+id/detail_applicate_nianling"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="16dp"
                    android:text="年龄："/>
                <TextView
                    android:id="@+id/detail_applicate_shixin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="16dp"
                    android:text="失信情况："/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="30dp"
                android:layout_marginBottom="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <Button
                    android:id="@+id/new_notification_refuse"
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:background="@drawable/orange_corner"
                    android:textSize="18dp"
                    android:textColor="@color/white"
                    android:text="拒绝"/>
                <Button
                    android:id="@+id/new_notification_affirm"
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="70dp"
                    android:background="@drawable/red_corner"
                    android:textSize="18dp"
                    android:textColor="@color/white"
                    android:text="确认"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
