<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context="com.xd.aselab.chinabankmanager.kafenqi.KWorkerManage.activity.NewNotificationDetailNewActivity">

    <RelativeLayout
        android:id="@+id/act_my_perf_top_bar"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:background="@color/colorPrimaryDark"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">

        <RelativeLayout
            android:id="@+id/act_new_noti_new_back_btn"
            android:layout_width="50dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="27dp"
                android:src="@drawable/back_btn_bg"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:layout_centerHorizontal="true"
            android:textColor="#fff"
            android:textSize="22dp"
            android:text="新业务详情"/>
    </RelativeLayout>

    <ScrollView
        android:layout_below="@id/act_my_perf_top_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/detail_worker_name_new"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18dp"
                    android:text="name"/>
                <TextView
                    android:id="@+id/detail_applicate_time_new"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textSize="16dp"
                    android:textColor="@color/black_text_most"
                    android:text="2017.09.23"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/detail_worker_tel_new"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:paddingTop="2dp"
                    android:textColor="@color/black_text_light"
                    android:text="联系电话："/>
                <ImageView
                    android:id="@+id/iv_call_worker_tel_new"
                    android:clickable="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:gravity="right"
                    android:src="@drawable/telphone_round"/>
                <ImageView
                    android:id="@+id/iv_worker_chat_new"
                    android:layout_toLeftOf="@id/iv_call_worker_tel_new"
                    android:layout_width="24dp"
                    android:layout_height="22dp"
                    android:gravity="right"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/chat_small"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/detail_worker_company_new"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="5dp"
                android:textSize="16dp"
                android:textColor="@color/black_text_light"
                android:text="工作单位："/>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="5dp"
                android:background="@color/gray_bg"/>
            <TextView
                android:id="@+id/detail_applicatin_name_new"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="5dp"
                android:textSize="18dp"
                android:textColor="@color/black_text_most"
                android:text="申请人："/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/detail_application_tel_new"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:paddingTop="2dp"
                    android:textColor="@color/black_text_light"
                    android:text="联系电话："/>
                <ImageView
                    android:id="@+id/iv_call_application_tel_new"
                    android:clickable="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:gravity="right"
                    android:src="@drawable/telphone_round"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/detail_applicate_money_new"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="5dp"
                android:textSize="16dp"
                android:textColor="@color/black_text_light"
                android:text="申请金额："/>
            <TextView
                android:id="@+id/detail_applicate_num_new"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="5dp"
                android:textSize="16dp"
                android:textColor="@color/black_text_light"
                android:text="分期数："/>
            <TextView
                android:id="@+id/detail_buy_commodity_new"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="5dp"
                android:textSize="16dp"
                android:textColor="@color/black_text_light"
                android:text="购买商品："/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/detail_self_score_new"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="16dp"
                    android:textColor="@color/black_text_light"
                    android:text="评分:"/>
                <TextView
                    android:visibility="gone"
                    android:id="@+id/detail_system_score_new"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="16dp"
                    android:textColor="@color/black_text_light"
                    android:text="预授信评分:"/>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/show_information_new"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:paddingTop="2dp"
                    android:textColor="@color/black_text_most"
                    android:text="查看详细信息"/>
                <ImageView
                    android:id="@+id/iv_right_arrow_new"
                    android:layout_alignParentRight="true"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:padding="2dp"
                    android:gravity="right"
                    android:src="@drawable/arrow_right"/>
            </RelativeLayout>
            <com.xd.aselab.chinabankmanager.util.NoScrollListView
                android:id="@+id/detail_lv"
                android:visibility="gone"
                android:divider="@null"
                android:cacheColorHint="@null"
                android:listSelector="@color/transparent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="50dp">
            </com.xd.aselab.chinabankmanager.util.NoScrollListView>
            <LinearLayout
                android:visibility="gone"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <Button
                    android:id="@+id/new_notification_refuse_new"
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:background="@drawable/blue_corner"
                    android:textSize="18dp"
                    android:textColor="@color/white"
                    android:text="拒绝"/>
                <Button
                    android:id="@+id/new_notification_affirm_new"
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="70dp"
                    android:background="@drawable/red_corner_light"
                    android:textSize="18dp"
                    android:textColor="@color/white"
                    android:text="确认"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom_choose"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tv_refuse"
                    android:layout_marginLeft="25dp"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="拒绝"/>
                <View
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:background="@color/gray_text_most"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tv_affirm"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="17dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="确认"/>
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
