<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xd.aselab.chinabankmanager.activity.PerfRankTransparent">

    <RelativeLayout
        android:id="@+id/act_perf_rank_trans_top_bar"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:background="@color/colorPrimaryDark">

        <RelativeLayout
            android:id="@+id/act_perf_rank_trans_back_btn"
            android:layout_width="50dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="31dp"
                android:padding="1.5dp"
                android:src="@drawable/back_btn_bg"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:layout_centerHorizontal="true"
            android:textColor="#fff"
            android:textSize="22dp"
            android:text="我的业绩"/>

        <TextView
            android:id="@+id/act_perf_rank_trans_select"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginTop="13dp"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="20dp"
            android:text="选择"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/act_perf_rank_trans_top_bar"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="#fff">

        <TextView
            android:id="@+id/act_perf_rank_trans_card_total"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:background="@drawable/rounded_rectangle"
            android:gravity="center"
            android:textSize="18dp"
            android:textColor="#5A5A5A"
            android:text="累计业绩排名"/>

        <TextView
            android:id="@+id/act_perf_rank_trans_half_year"
            android:layout_toRightOf="@id/act_perf_rank_trans_card_total"
            android:layout_alignBottom="@id/act_perf_rank_trans_card_total"
            android:layout_marginLeft="10dp"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:background="@drawable/rounded_rectangle"
            android:gravity="center"
            android:textSize="18dp"
            android:textColor="#5A5A5A"
            android:text="近半年排名"/>

        <TextView
            android:id="@+id/act_perf_rank_trans_three_month"
            android:layout_toRightOf="@id/act_perf_rank_trans_half_year"
            android:layout_alignBottom="@id/act_perf_rank_trans_card_total"
            android:layout_marginLeft="10dp"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:background="@drawable/rounded_rectangle"
            android:gravity="center"
            android:textSize="18dp"
            android:textColor="#5A5A5A"
            android:text="近一季度排名"/>

        <TextView
            android:id="@+id/act_perf_rank_trans_shop_total"
            android:layout_below="@id/act_perf_rank_trans_card_total"
            android:layout_marginTop="10dp"
            android:layout_alignLeft="@id/act_perf_rank_trans_card_total"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:background="@drawable/rounded_rectangle"
            android:gravity="center"
            android:textSize="18dp"
            android:textColor="#5A5A5A"
            android:text="累计发展商户"/>

    </RelativeLayout>

</RelativeLayout>
