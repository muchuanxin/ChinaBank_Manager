<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/list_view_perf_ranking_number"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:gravity="center"
        android:textSize="16dp"
        android:text="1"/>

    <TextView
        android:id="@+id/list_view_perf_ranking_name"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center"
        android:textColor="@color/black_text_most"
        android:textSize="20dp"
        android:text="王丽丽"/>

    <TextView
        android:id="@+id/list_view_perf_ranking_count"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center"
        android:textColor="@color/black_text_most"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/list_view_perf_ranking_money"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center"
        android:textColor="@color/black_text_most"
        android:textSize="18dp"/>

</RelativeLayout>