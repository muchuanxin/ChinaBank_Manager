<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:descendantFocusability="blocksDescendants"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/shenqingren"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="@color/black_text_most"
                    android:text="申请人："/>
                <TextView
                    android:id="@+id/applicatinName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="朱平安"/>
            </LinearLayout>

            <TextView
                android:id="@+id/applicateTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:textSize="16dp"
                android:textColor="@color/gray_text_most"
                android:text="2017.09.23"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/call_application"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/fenqi_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16dp"
                android:textColor="@color/gray_text_most"
                android:text="分期金额：123.00元"/>
            <TextView
                android:id="@+id/application_tel"
                android:layout_below="@id/fenqi_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:paddingTop="3dp"
                android:textColor="@color/gray_text_most"
                android:text="联系电话：15269541269"/>
            <ImageView
                android:id="@+id/act_tel"
                android:clickable="true"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@id/application_tel"
                android:padding="5dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="right"
                android:src="@drawable/telephone_red"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">
            <LinearLayout
                android:id="@+id/left_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/buy_commodity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="@color/gray_text_most"
                    android:text="购买商品：奥迪Q8"/>
                <TextView
                    android:id="@+id/fenqi_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:gravity="right"
                    android:textSize="16dp"
                    android:textColor="@color/gray_text_most"
                    android:text="分期数：23期"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_alignBottom="@id/left_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/bt_list_confirm"
                    android:layout_width="65dp"
                    android:layout_height="28dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/red_button_bg"
                    android:textColor="#fff"
                    android:textSize="16dp"
                    android:text="确认"/>
                <Button
                    android:id="@+id/bt_list_refuse"
                    android:layout_width="65dp"
                    android:layout_height="28dp"
                    android:layout_toLeftOf="@+id/bt_list_confirm"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/blue_button_bg"
                    android:textColor="#fff"
                    android:textSize="16dp"
                    android:text="拒绝"/>
            </RelativeLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/gray_bg"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">
            <TextView
                android:id="@+id/score_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="预授信评分："/>
            <TextView
                android:id="@+id/score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="80"/>
        </LinearLayout>



    </LinearLayout>




</LinearLayout>